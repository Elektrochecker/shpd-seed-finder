+				for (int k = 0; k < rooms.size(); k++) {
+					out.printf("- " + rooms.get(k) + "\n");
+				}
+
+				out.printf("\n");
+			}
+
+			// list quest rewards
+			if (Ghost.Quest.armor != null) {
+				ArrayList<Item> rewards = new ArrayList<>();
