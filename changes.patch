+						for (int j = 0; j < Options.infoSpacing - i.title().length() - cursed.length(); j++) {
+							builder.append(" ");
+						}
+
+						builder.append("(" + h.title().toLowerCase() + ")");
+					}
+				}
+				builder.append("\n");
+			}
+
+			builder.append(padding);
+		}
