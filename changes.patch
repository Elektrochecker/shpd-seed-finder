+					cursed = "cursed ";
+				}
+
+				if (i instanceof Scroll || i instanceof Potion || i instanceof Ring) {
+					int txtLength = i.title().length();
+
+					if (i.cursed) {
+						builder.append("- cursed ");
+						txtLength += 7;
+					} else {
+						builder.append("- ");
+					}
+
+					// make anonymous names show in the same column to look nice
