+	private ArrayList<HeapItem> getTrinkets() {
+		TrinketCatalyst cata = new TrinketCatalyst();
+		int NUM_TRINKETS = TrinketCatalyst.WndTrinket.NUM_TRINKETS;
+
+		// roll new trinkets if trinkets were not already rolled
